                                <input id="name" name="name" type="text" class="form-control" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                                <label for="user" class="form-label">Nombre Usuario</label>
                                <input id="user" name="user" type="text" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="pass" class="form-label">Contrase√±a</label>
                                <input id="pass" name="pass" type="password" class="form-control">
                            </div>
                            <div class="card-foote bg-transparent border-primary">
                                <a href="/" type="button" class="btn btn-secundary">Cancelar</a>
                                <button type="submit" class="btn btn-primary">Registrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      </div>
